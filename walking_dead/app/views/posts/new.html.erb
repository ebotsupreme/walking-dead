<div id="create_post">
  <h1>Create a new Post!</h1>
</div>
<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @post.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="jumbotron col-md-3 col-md-offset-0">
    <div class="field">
      <%= f.text_field :title, placeholder: "Title of Post" %>
    </div><br>
    <div class="field">
      <%= f.text_area :body, placeholder: "Put your post here!" %>
    </div><br>
    <div class="field">
      <%= f.text_field :category, placeholder: "Category" %>
    </div><br>
    <div class="actions">
      <%= f.submit %>
    </div>
  </div>
<% end %>
